set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (p) shutdown
mode "$mode_system" {
    #bindsym l exec --no-startup-id cinnamon-screensaver-command -l, mode "default"
    bindsym l exec --no-startup-id $lock_screen, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    #bindsym s exec --no-startup-id cinnamon-screensaver-command -l, exec --no-startup-id systemctl suspend, mode "default"
    #bindsym s exec --no-startup-id $lock_screen, exec --no-startup-id systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Delete mode "$mode_system"


# Launch mode, one app per key.
set $mode_launch Run (a)tom (c)hromium co(d)e (f)irefox (t)hunderbird fil(e)manager (i)ntellij (j)eclipse (q)calc (v)pn (w)indows
mode "$mode_launch" {
    bindsym a exec atom $HOME/Dokumente ; mode "default"
    bindsym c exec chromium ; mode "default"
    bindsym d exec code $HOME/Dokumente ; mode "default"
    bindsym e exec thunar ; mode "default"
    bindsym f exec firefox ; mode "default"
    bindsym i exec idea ; mode "default"
    bindsym j exec $HOME/bin/eclipse ; mode "default"
    bindsym t exec thunderbird ; mode "default"
    bindsym q exec xdg-open $HOME/Dokumente/Stunden/Stunden_2020.ods ; mode "default"
    #bindsym s exec gksudo synaptic ; mode "default"
    #bindsym q exec libreoffice --calc ; mode "default"
    bindsym v exec $HOME/bin/vpn.sh ; mode "default"
    bindsym w exec VBoxManage startvm "Windows 10" ; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode "$mode_launch"


set $mode_monitor Monitor mode: (a) arandr (1) Laptop only (2) Docking Station + Laptop (d) Docking Station only (s|m|l) set dpi
mode "$mode_monitor" {
    bindsym 1 exec ~/.screenlayout/only_laptop.sh ; mode "default"
    bindsym 2 exec ~/.screenlayout/home.sh ; mode "default"
    bindsym d exec ~/.screenlayout/only_docking_monitor.sh ; mode "default"
    bindsym h exec ~/.screenlayout/laptop+hdmi_1920x1080.sh ; mode "default"
    bindsym H exec ~/.screenlayout/laptop+hdmi_1920x1200.sh ; mode "default"
    bindsym a exec arandr ; mode "default"
    bindsym l exec ~/bin/set_dpi.sh 192 ; mode "default"
    bindsym m exec ~/bin/set_dpi.sh 168 ; mode "default"
    bindsym s exec ~/bin/set_dpi.sh 96 ; mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+m mode "$mode_monitor"

